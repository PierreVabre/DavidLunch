<h1>Gestion des adresses</h1>

<a href="<%= new_adress_path %>">Ajouter une nouvelle adresse</a>
<br/><br/>
<% @adresses.each do |adresse| %>
	
	<div class="adresse_carte">
		<a class="adresse_title" href="<%= adress_path adresse %>">
			<%= adresse.title %>		
		</a>
		<br/>
		<% @category = Category.find(adresse.category_id) %>
		<a class="category_title" href="<%= category_path @category %>">
			<%= @category.title %>
		</a>
	</div>

<% end %>


